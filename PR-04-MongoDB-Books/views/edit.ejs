<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Book</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <%- include('partials/header') %>

  <div class="container mt-5">
    <h2 class="mb-4">✏️ Edit Book</h2>
    <form action="/edit/<%= book._id %>" method="POST" enctype="multipart/form-data">
      <div class="mb-3">
        <label class="form-label">Title</label>
        <input type="text" name="title" class="form-control" value="<%= book.title %>" required>
      </div>

      <div class="mb-3">
        <label class="form-label">Author</label>
        <input type="text" name="author" class="form-control" value="<%= book.author %>" required>
      </div>

      <div class="mb-3">
        <label class="form-label">Category</label>
        <select name="category" class="form-select" required>
          <% ['Fiction', 'Non-Fiction', 'Biography', 'Science', 'Romance', 'Mystery', 'Self-help'].forEach(cat => { %>
            <option value="<%= cat %>" <%= book.category === cat ? 'selected' : '' %>><%= cat %></option>
          <% }) %>
        </select>
      </div>

      <div class="mb-3">
        <label class="form-label">Publisher</label>
        <input type="text" name="publisher" class="form-control" value="<%= book.publisher %>" required>
      </div>

      <div class="mb-3">
        <label class="form-label">Publication Date</label>
        <input type="date" name="pubDate" class="form-control" value="<%= book.pubDate.toISOString().split('T')[0] %>" required>
      </div>

      <div class="mb-3">
        <label class="form-label">Language</label>
        <select name="language" class="form-select" required>
          <% ['English', 'Hindi', 'French', 'German', 'Gujarati'].forEach(lang => { %>
            <option value="<%= lang %>" <%= book.language === lang ? 'selected' : '' %>><%= lang %></option>
          <% }) %>
        </select>
      </div>

      <div class="mb-3">
        <label class="form-label">Price (₹)</label>
        <input type="number" name="price" class="form-control" value="<%= book.price %>" step="0.01" required>
      </div>

      <div class="mb-3">
        <label class="form-label">Current Cover Image</label><br>
        <img src="<%= book.coverImageUrl %>" alt="Cover Image" height="150">
      </div>

      <div class="mb-3">
        <label class="form-label">Change Cover Image</label>
        <input type="file" name="coverImage" class="form-control" accept="image/*">
      </div>

      <div class="mb-3">
        <label class="form-label">Description</label>
        <textarea name="description" class="form-control" rows="3" required><%= book.description %></textarea>
      </div>

      <div class="mb-3">
        <label class="form-label">Rating (1–5)</label>
        <input type="number" name="rating" class="form-control" value="<%= book.rating %>" step="0.1" min="1" max="5">
      </div>

      <button type="submit" class="btn btn-primary">Update Book</button>
      <a href="/" class="btn btn-secondary">Cancel</a>
    </form>
  </div>

  <%- include('partials/footer') %>
</body>
</html>