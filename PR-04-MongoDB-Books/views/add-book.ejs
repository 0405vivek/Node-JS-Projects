<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <%- include('partials/header') %>

<div class="container mt-5">
  <h2 class="mb-4">ðŸ“˜ Add New Book</h2>

  <form action="/add-book" method="POST" enctype="multipart/form-data">
    <!-- Book Title -->
    <div class="mb-3">
      <label for="title" class="form-label">Book Title</label>
      <input type="text" name="title" id="title" class="form-control" placeholder="The Great Gatsby" required>
    </div>

    <!-- Author Name -->
    <div class="mb-3">
      <label for="author" class="form-label">Author Name</label>
      <input type="text" name="author" id="author" class="form-control" placeholder="F. Scott Fitzgerald" required>
    </div>

    <!-- Genre / Category -->
    <div class="mb-3">
      <label for="genre" class="form-label">Genre / Category</label>
      <select name="category" id="genre" class="form-select" required>
        <option value="">Select Genre</option>
        <option value="Fiction">Fiction</option>
        <option value="Non-Fiction">Non-Fiction</option>
        <option value="Biography">Biography</option>
        <option value="Science">Science</option>
        <option value="Romance">Romance</option>
        <option value="Mystery">Mystery</option>
        <option value="Self-help">Self-help</option>
      </select>
    </div>

    <!-- Publisher -->
    <div class="mb-3">
      <label for="publisher" class="form-label">Publisher</label>
      <input type="text" name="publisher" id="publisher" class="form-control" placeholder="Penguin Random House" required>
    </div>

    <!-- Publication Date -->
    <div class="mb-3">
      <label for="pubDate" class="form-label">Publication Date</label>
      <input type="date" name="pubDate" id="pubDate" class="form-control" required>
    </div>

    <!-- Language -->
    <div class="mb-3">
      <label for="language" class="form-label">Language</label>
      <select name="language" id="language" class="form-select" required>
        <option value="">Select Language</option>
        <option value="English">English</option>
        <option value="Hindi">Hindi</option>
        <option value="French">French</option>
        <option value="German">German</option>
        <option value="Gujarati">Gujarati</option>
      </select>
    </div>

    <!-- Price -->
    <div class="mb-3">
      <label for="price" class="form-label">Price (â‚¹)</label>
      <input type="number" name="price" id="price" class="form-control" placeholder="299" step="0.01" required>
    </div>

    <!-- Book Cover Image -->
    <div class="mb-3">
      <label for="coverImage" class="form-label">Book Cover Image</label>
      <input type="file" name="coverImage" id="coverImage" class="form-control" accept="image/*" required>
    </div>

    <!-- Short Description -->
    <div class="mb-3">
      <label for="description" class="form-label">Short Description / Summary</label>
      <textarea name="description" id="description" class="form-control" rows="3" placeholder="Brief overview of the book..." required></textarea>
    </div>

    <!-- Rating (Optional) -->
    <div class="mb-3">
      <label for="rating" class="form-label">Rating (1â€“5)</label>
      <input type="number" name="rating" id="rating" class="form-control" placeholder="4.5" step="0.1" min="1" max="5">
    </div>

    <!-- Submit -->
    <button type="submit" class="btn btn-success">Add Book</button>
    <a href="/" class="btn btn-secondary">Cancel</a>
  </form>
</div>

<%- include('partials/footer') %>

</body>
</html>
