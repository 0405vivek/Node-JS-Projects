<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="icon" type="image/png" href="/Extra/logo2.png">
  <title>Movies</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    body {
      background-color: #fff;
      color: #333;
      font-family: Arial, sans-serif;
    }

    .navbar {
      background-color: #eb4e62 !important;
    }

    .navbar .nav-link,
    .navbar .navbar-brand {
      color: white !important;
      font-weight: 500;
    }

    .section-title {
      margin: 20px 0 10px;
      font-weight: bold;
      font-size: 1.4rem;
    }

    .movie-row {
      display: flex;
      flex-wrap: wrap;
      gap: 20px;
    }

    .movie-card {
      width: 200px;
      background-color: #fff;
      border-radius: 10px;
      overflow: hidden;
      box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.08);
      transition: transform 0.2s ease;
      cursor: pointer;
    }

    .movie-card img {
      width: 100%;
      height: 300px;
      object-fit: cover;
    }

    .movie-card:hover {
      transform: scale(1.05);
    }

    .movie-card-body {
      padding: 10px;
    }

    .movie-card-body p {
      margin: 0;
      font-size: 0.85rem;
      color: #666;
    }

    .edit-delete {
      display: flex;
      justify-content: space-between;
      margin-top: 8px;
    }

    /* Unique Edit button */
    .btn-edit-custom {
      background: linear-gradient(135deg, #36d1dc, #5b86e5);
      border: none;
      color: white;
      font-weight: bold;
      border-radius: 20px;
      padding: 5px 12px;
      transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .btn-edit-custom:hover {
      transform: scale(1.05);
      box-shadow: 0 4px 12px rgba(91, 134, 229, 0.5);
      color: white;
    }

    /* Unique Delete button */
    .btn-delete-custom {
      background: linear-gradient(135deg, #ff512f, #dd2476);
      border: none;
      color: white;
      font-weight: bold;
      border-radius: 20px;
      padding: 5px 12px;
      transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .btn-delete-custom:hover {
      transform: scale(1.05);
      box-shadow: 0 4px 12px rgba(221, 36, 118, 0.5);
      color: white;
    }
  </style>
</head>

<body>

  <nav class="navbar navbar-expand-lg">
    <div class="container" style="max-width:1220px;">
      <a class="navbar-brand bms-outline-text" href="/">BookMyShow</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon text-white"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav me-auto">
          <li class="nav-item">
            <a class="nav-link active" href="/">Home</a>
          </li>
        </ul>

        <form class="d-flex me-3">
          <input class="form-control form-control-sm me-2" type="search" placeholder="Search">
          <button class="btn btn-light btn-sm" type="submit">Search</button>
        </form>

        <a href="/movies/add" class="btn btn-light fw-bold px-3">+ Add Movie</a>
      </div>
    </div>
  </nav>

  <div class="container mt-4" style="max-width:1220px;">
    <h2 class="section-title">Now Showing</h2>
    <div class="movie-row">
      <% movies.forEach(movie=> { %>
      <div class="movie-card" onclick="window.location.href='/movies/<%= movie._id %>'">
        <% if (movie.poster) { %>
        <img src="/uploads/<%= movie.poster %>" alt="Poster">
        <% } else { %>
        <img src="https://via.placeholder.com/200x300?text=No+Image" alt="No poster">
        <% } %>

        <div class="movie-card-body">
          <h6><%= movie.title %></h6>
          <p><strong>Genre:</strong> <%= movie.genre || "N/A" %></p>
          <p><strong>Rating:</strong> <%= movie.rating || "N/A" %></p>

          <div class="edit-delete">
            <a href="/movies/edit/<%= movie._id %>" class="btn btn-edit-custom btn-sm"> Edit</a>
            <form action="/movies/delete/<%= movie._id %>" method="POST" style="display:inline;">
              <button type="submit" class="btn btn-delete-custom btn-sm"> Delete</button>
            </form>
          </div>
        </div>
      </div>
      <% }) %>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
